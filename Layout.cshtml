<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script type="text/javascript"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.0/dist/semantic.min.css" />
    <script src="https://code.jquery.com/jquery-2.0.0.js"
            integrity="sha256-iW43nTNM8LFseNmWKhV5FHFW1KcjVQMvzg3l9nPU4oc="
            crossorigin="anonymous"></script>
    <script src="~/Content/semantic.min.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <style></style>

</head>
<body>

    <div class="ui fixed inverted menu">
        <div class="ui container">
            <a href="#" class="header item">
                <img class="logo" src="https://semantic-ui.com/examples/assets/images/logo.png">
                Talent Onboarding
            </a>


            
            <a href="/Hom/Product" class="item">Product</a>
            <a href="/Hom/Sales" class="item">Sales</a>
            <a href="/Hom/Store" class="item">Store</a>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)

</body>
</html>
